<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <!--<fragment android:id="@+id/map"-->
        <!--class="com.google.android.gms.maps.MapFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->
    <RelativeLayout
        android:id="@+id/rlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <ImageButton
            android:id="@+id/ibSwap"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_custom"
            android:src="@drawable/swap_button"
            android:onClick="onClick"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A;"
            android:textColor="#50509E"
            android:layout_margin="7dp"
            android:textSize="24dp"
            />
        <EditText
            android:id="@+id/etStart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="Beginning"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toRightOf="@id/tvStart"
            android:layout_toLeftOf="@id/ibSwap"

            />
        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B:"
            android:textColor="#F75757"
            android:textSize="24dp"
            android:layout_margin="7dp"
            android:layout_below="@id/etStart"
            />
        <ImageButton
            android:id="@+id/buttonGo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:contentDescription="Start"
            android:layout_below="@id/etStart"
            android:padding="2dp"
            android:layout_toLeftOf="@id/ibSwap"
            android:src="@android:drawable/ic_menu_search"
            android:background="@drawable/button_custom"
            android:onClick="onClick"
            />
        <EditText
            android:id="@+id/etDestination"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:layout_toRightOf="@id/tvEnd"
            android:layout_below="@id/etStart"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toLeftOf="@id/buttonGo"
            android:hint="END"
            android:imeOptions="actionSearch"
            />
    </RelativeLayout>
</RelativeLayout>